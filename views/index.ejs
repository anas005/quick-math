<html>
  <head>
    <title>Node Game</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/public/jquery-1.8.0.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/public/hollywood.js"></script>
    <link rel="stylesheet" href="/public/bootstrap.css" />
    <script src="/public/bootstrap.js"></script>
    <link rel="stylesheet" href="/public/app.css" />
  </head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Node Game</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <div class="container">
      <div id="dashboard">
        <div class="row" />
          <div class="col-md-12">
            <form action="/play" method="post" id="nameForm">
              <%if (status == "error") {%>
                <!-- <div class="col-xs-12 col-md-7 col-sm-7 tooltip">
                <input type="input" name="name" class="error" id="data" placeholder="Enter your name" value="<%=name%>"/>
                <span class="tooltiptext"><%=errorText%></span> -->
                <input type="input" name="name" class="col-xs-12 col-md-7 col-sm-7 error" id="data" value="<%=name%>"/>
              <%} else {%>
                <input type="input" name="name" class="col-xs-12 col-md-7 col-sm-7" id="data" placeholder="Enter your name"/>
              <%}%>
            </div>
            <div class="col-xs-12 col-md-1 col-sm-1"></div>
            <div class="col-xs-12 col-md-4 col-sm-4" id="login">Login</div>
          </div>
        </div>
      </div>
      <script>
        // on load of page
        $(function() {
          <%if (status == "error") {%>
            alert("<%=errorText%>");
          <%}%>
          // when the client hits ENTER on their keyboard
          $('#data').keypress(function(e) {
            $(this).removeClass('error');
            if(e.which == 13) $("#nameForm").submit();
          });
          $('#login').click(function() {
            console.log("login clicked...");
            $("#nameForm").submit();
          })
        });
      </script>
    </div>
  </body>
</html>
